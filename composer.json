{
    "name": "kode/runtime",
    "description": "Unified runtime abstraction layer for modern PHP long-running applications",
    "version": "1.1.0",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kode Team",
            "email": "team@kode-php.org"
        }
    ],
    "require": {
        "php": "^8.1",
        "kode/context": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Kode\\Runtime\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kode\\Runtime\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 src/ tests/",
        "cs-fix": "phpcbf --standard=PSR12 src/ tests/"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}